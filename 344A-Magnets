#include <bits/stdc++.h>
using namespace std ;
#include ll long long
 
int main()
{
    ll flag=1;
    ll n,k;
    cin>>n;
    //int h[n];
    vector<int> h(n);
    k=n;
    ll count = 1;
    
    while(k--)
    {
        cin>>h[k];
        ll sz=n-1;
        
        if(flag==1 && k<sz)
        {
            if(flag==1 && h[k]!=h[k+1])
            {
                count++;
            }
        }
    }
    
    cout<<count<<endl;
 
}
